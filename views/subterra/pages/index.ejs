<!DOCTYPE html>
<html lang="nl">
	<head>
		<meta charset="UTF-8">

		<title>Pages</title>

    <%- include ../../partials/head -%>

    <%- include ../../partials/header -%>

    <h1>Pages</h1>

    <% if (pages.length > 0) { %>
      <ul>
        <% for (let i = 0; i < pages.length; i++) { %>
          <li>
            <a href="/subterra/pages/edit/<%= pages[i].id %>">
              <%= pages[i].title %>
            </a>
          </li>
        <% } %>
      </ul>
    <% } else { %>
      <p>No pages found.</p>
    <% } %>


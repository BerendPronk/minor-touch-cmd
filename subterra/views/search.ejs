<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">

		<title>Subterra - '<%= query %>'</title>

    <%- include partials/head -%>

    <%- include partials/header -%>

    <% if (feedback) { %>
      <div id="feedback" class="<%= feedbackState %>">
        <%= feedback %>
      </div>
    <% } %>

    <h1>Results for '<%= query %>':</h1>

    <%# Check if category contains result%>
    <% Object.keys(results).forEach(category => { %>
      <% if (results[category].length > 0) { %>
        <section>
          <h3><%= category %></h3>
          <p><%= results[category].length %> <%= results[category].length === 1 ? 'item' : 'items' %> found</p>

          <ul>
            <% for (let i = 0; i < results[category].length; i++) { %>
              <li>
                <%= results[category][i].name %>
                <a href="/subterra/<%= category %>/edit/<%= results[category][i].id %>">
                  edit
                </a>
              </li>
            <% } %>
          </ul>
        </section>
      <% } %>
    <% }); %>

		<%- include partials/footer -%>

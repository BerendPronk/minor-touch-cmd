<%- include ../partials/head -%>

<title>Add a page type</title>

<%- include ../partials/header -%>

<% if (feedback) { %>
  <div id="feedback" class="<%= feedbackState %>">
    <%= feedback %>
  </div>
<% } %>

<h1>Add a page type</h1>

<p>
  Select all module you want to set as default modules if a new page with this type is created.
</p>

<form action="/subterra/types/add" method="post" onsubmit="form.submit()">
  <fieldset>
    <legend>Name</legend>

    <label>
      Enter a name for this page type
      <input name="name" type="text" pattern="[a-zA-Z0-9\s]+" title="Only alphanumeric characters are allowed" required>
    </label>
  </fieldset>
  <fieldset>
    <legend>Modules</legend>

    <ul id="typeModules"></ul>

    <input name="modules" type="hidden">

    <label>
      Select a default module to include in this page type (multiple possible)
      <select id="typeModuleSelect" onchange="list.add('modules')">
        <option value="" disabled selected>Add a module</option>
        <% for (let i = 0; i < system.modules.length; i++) { %>
          <option value="<%= system.modules[i] %>">
            <%= system.modules[i] %>
          </option>
        <% } %>
      </select>
    </label>
  </fieldset>

  <input type="submit" value="Submit">
</form>

<%- include ../partials/footer -%>
